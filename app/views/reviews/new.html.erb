<div class="container">
  <div class="row">
      <div class="col col-xs-12 col-sm-6 col-sm-offset-3">
      <h1>Adding a review for <%= @restaurant.name %></h1>
        <%= simple_form_for [@restaurant, @review] do |f| %>
          <%= f.input :content %>
          <%= f.label :rating %>
          <%= f.input :rating, as: :radio_buttons, label: false, item_label_class: "radio-inline", item_wrapper_tag: false, collection: [0,1,2,3,4,5] %>
          <%= f.submit "Add a Review", class: "btn btn-primary" %>
        <% end %>
      </div>
  </div>
</div>
<%= link_to "Back to Restaurant", restaurant_path(@restaurant) %>

